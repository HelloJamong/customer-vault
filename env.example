# Flask 설정
FLASK_ENV=production
FLASK_DEBUG=False  # 운영 환경에서는 반드시 False로 설정 (보안)
SECRET_KEY=your-secret-key-here-change-in-production

# 데이터베이스 설정
DB_ROOT_PASSWORD=rootpassword
DB_NAME=customer_db
DB_USER=customer_user
