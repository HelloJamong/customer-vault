# Flask 설정
FLASK_ENV=production
# SECRET_KEY 생성 방법: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-to-random-string

# 데이터베이스 설정
DB_ROOT_PASSWORD=change-this-to-strong-password
DB_NAME=customer_db
DB_USER=customer_user
DB_PASSWORD=change-this-to-strong-password

# 파일 업로드 설정
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=pdf

# Docker 설정 (프로덕션 배포 시 사용)
DOCKER_IMAGE=igor0670/customer-storage:latest
HOST_PORT=5001

# 주의사항:
# 1. 이 파일을 복사하여 .env 파일을 생성하세요: cp .env.example .env
# 2. SECRET_KEY는 반드시 랜덤한 값으로 변경하세요 (예: python -c "import secrets; print(secrets.token_hex(32))")
# 3. 데이터베이스 비밀번호를 강력한 값으로 변경하세요
# 4. .env 파일은 절대 Git에 커밋하지 마세요!
