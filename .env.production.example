# NestJS 백엔드 프로덕션 환경 변수 예시
# 사용법: cp .env.production.example .env.production

# ==========================================
# 데이터베이스 설정 (프로덕션)
# ==========================================
DB_ROOT_PASSWORD=<STRONG_PASSWORD_HERE>
DB_NAME=customer_db
DB_USER=customer_user
DB_PASSWORD=<STRONG_PASSWORD_HERE>

# ==========================================
# JWT 설정 (프로덕션 - 64자 권장)
# ==========================================
# 생성 방법: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=<GENERATE_64_BYTE_SECRET_HERE>
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# 애플리케이션 설정 (프로덕션)
# ==========================================
NODE_ENV=production
BACKEND_PORT=5001

# ==========================================
# 파일 업로드 설정
# ==========================================
MAX_UPLOAD_SIZE=16777216

# ==========================================
# 로깅 설정 (프로덕션)
# ==========================================
LOG_LEVEL=warn

# ==========================================
# CORS 설정 (프로덕션 - 실제 도메인으로 변경)
# ==========================================
# 예시: CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=http://localhost:3000

# ==========================================
# 보안 설정
# ==========================================
# Rate limiting (분당 요청 수)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session timeout (분)
SESSION_TIMEOUT=30
