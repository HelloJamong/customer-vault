# NestJS 백엔드 Docker Compose 환경 변수 예시
# 사용법: cp .env.nestjs.example .env.nestjs

# ==========================================
# 데이터베이스 설정 (필수)
# ==========================================
DB_ROOT_PASSWORD=강력한_루트_비밀번호_여기에_입력
DB_NAME=customer_db
DB_USER=customer_user
DB_PASSWORD=강력한_사용자_비밀번호_여기에_입력

# ==========================================
# JWT 설정 (필수 - 최소 32자 이상)
# ==========================================
# 생성 방법: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=여기에_강력한_32자_이상의_시크릿키_입력
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# 애플리케이션 설정
# ==========================================
NODE_ENV=production
BACKEND_PORT=5000

# ==========================================
# 파일 업로드 설정
# ==========================================
MAX_UPLOAD_SIZE=16777216

# ==========================================
# 로깅 설정
# ==========================================
LOG_LEVEL=info

# ==========================================
# CORS 설정
# ==========================================
# 프로덕션에서는 실제 프론트엔드 도메인으로 변경
CORS_ORIGIN=*
